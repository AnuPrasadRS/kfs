@model IEnumerable<Catalog.Models.UserToShip>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="content">
    <div class="row">
        <div class="col-xs-10">
            <div class="box">
                <div class="box-header">
                </div>
                <!-- /.box-header -->
                <div class="box-body">

                    <p>
                        @Html.ActionLink("Create New", "Create")
                    </p>
                    <table class="table">
                        <tr>

                            <th>
                                @Html.DisplayNameFor(model => model.Login.Username)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Ship.ShipName)
                            </th>
                            <th>
                                Created On
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Login.Username)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Ship.ShipName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.EnteredOn)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                                </td>
                            </tr>
                        }

                    </table>
                </div>
            </div>
        </div>
    </div>
</section>